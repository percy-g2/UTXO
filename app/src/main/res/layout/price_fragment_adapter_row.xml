<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/cardView"
    android:layout_margin="5dp"
    app:cardElevation="1sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <ImageView
            android:id="@+id/exchangeImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="18dp"
            android:background="@mipmap/ic_launcher"
            android:contentDescription="@string/CoinImage" />

        <View
            android:id="@+id/view_vertical_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/exchangeImage"
            android:layout_toRightOf="@+id/exchangeImage"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/view_vertical_line"
            android:layout_toLeftOf="@+id/linearLayout_prices"
            android:layout_toRightOf="@id/view_vertical_line"
            android:layout_toStartOf="@+id/linearLayout_prices"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="Bitcoin" />

        <LinearLayout
            android:id="@+id/linearLayout_prices"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="5000.00$" />

            <TextView
                android:id="@+id/txt_high_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/materialLightPurple"
                tools:text="24h: 0.25%" />

            <TextView
                android:id="@+id/txt_low_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/materialLightPurple"
                tools:text="7d: -0.25%" />

        </LinearLayout>

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/exchangeImage"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-12dp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toTopOf="@+id/exchangeImage"
            app:layout_constraintEnd_toStartOf="@+id/txt_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
